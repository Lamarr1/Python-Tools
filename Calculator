# Area Calculator for Circles and triangles
from math import pi
from time import sleep
from datetime import datetime
import time
now = datetime.now()
print "Calculator booting"
time.sleep(1)
print "Calculator booting."
time.sleep(1)
print "Calculator booting.."
time.sleep(1)
print "Calculator booting..."
time.sleep(1)
print "Calculator booting...."
print "Current time: %s/%s/%s %s:%s" % (now.day, now.month, now.year, now.hour, now.minute)
sleep(1)
hint = "Don't forget to include the correct units. \nExiting"
option =  raw_input("Enter C for circle or T for Triangle: ")
option = option.upper()
if option == 'C':
  radius = float(raw_input("Enter radius: "))
  area = pi * radius ** 2 
  print "The pi is baking..."
  sleep(1)
  print ("Area: %.2f.  \n%s" % (area,hint))
elif option == 'T':
    base = float(raw_input("Enter base: "))
    height = float(raw_input("Enter height: "))
    area = 0.5 * base * height
    print "Baking the triangle... if you know   what I mean.."
sleep(1)
print ("Area: %.2f. \n%s" % (area,hint))
